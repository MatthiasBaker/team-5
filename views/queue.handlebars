<!doctype html>
<html>
<head>
    <title>Landing Page</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/hostCSS.css" rel="stylesheet">
</head>
<body>
    <center>

        <div id="titleBar">
            <div id="hamburger">
                <img id="hamImg" src="/img/hamburger.png">
            </div>
            <div id="albumCover">
                <img id="albumImg" src="/img/Ellie_Goulding.png">
            </div>
            <div id="rightBottomBar">
                <div id="songTitleContainer">
                    <h4 id="songTitle" class="myTxt">Close To Me</h4>
                    <marquee id="albumTitle" class="myTxt" behavior="scroll" direction="left" style="marquee-speed:slow;">Ellie Goulding and Diplo featuring Swae Lee</marquee>
                </div>
                <div id="leaveOrAdd">
                    <a href="back">
                        <div id="leaveSesh">
                            <img id="leave_img" src="/img/end_session.png">
                        </div>
                    </a>
                    <div id="pause">
                        <img id="leave_img" src="/img/pause.png">
                    </div>
                    <div id="next">
                        <img id="leave_img" src="/img/next.png">
                    </div>
                </div>
            </div>
        </div>
        <div id="filler_grey"> 
            <br>
        </div>

        <!-- Second Section of Session ID -->
        <div id="SessionIDTab1">
            <!-- <input id="searchTab"type="text" placeholder="Search.."> -->
            <input type="text" class="form-control" placeholder="Search to Add Song" aria-label="Username" aria-describedby="basic-addon1">
        </div>
    </div>
 <!--        <div id="yourListen"> 
            hello
        </div> -->

        <!-- Third Section of Friend List -->
        <div id="friendList">

            {{#each songs}}
            <div id="friend">
                <div id="friendImgContainer">
                    <img src={{imageURL}} id="hello">
                </div>
                <div id=friendNameContainer>
                    <h3 id="friendName">{{name}}</h3>
                    <h3 id="otherInfo" style="color: green">{{artist}}</h3>
                    <h3 id="otherInfo2" style="color: brown">{{album}}</h3>
                </div>
            </div>
            <br>
            {{/each}}


