                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input id="textboxid" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Remenber Me</label>
                </div>
                <br>
                <button id="submitButton" type="submit" class="btn btn-primary" onclick="window.location.href = 'host';">Submit</button>
            </form>
        </div>
        <a href="back">
            <div id="back">
                <img id="back_img" src="/img/exit.png">
            </div>
        </a>
    </div>


</center>
</body>
</html>
