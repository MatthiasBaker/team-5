                </div>
            </div>
        </div>
                <div id="filler_grey"> 
            <br>
        </div>

        <!-- Second Section of Session ID -->
        <div id="SessionIDTab1">
            <!-- <input id="searchTab"type="text" placeholder="Search.."> -->
            <input type="text" class="form-control" placeholder="Search to Add Song" aria-label="Username" aria-describedby="basic-addon1">
        </div>
    </div>
