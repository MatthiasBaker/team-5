                <div id="leaveOrAdd">
                    <a href="back">
                        <div id="leaveSesh">
                            <img id="leave_img" src="/img/end_session.png">
                        </div>
                    </a>
                    <div id="addList">
                        <button class="btn btn-info" id="addFont" onclick="added()">
